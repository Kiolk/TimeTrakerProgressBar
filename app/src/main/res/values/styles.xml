<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Bar1" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <!--<item name="android:padding">15dp</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progress">50</item>
    </style>

    <style name="Bar2" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Bar3" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Bar4" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Bar5" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ImageStyle">
        <item name="android:minHeight">100dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageStyleCons">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
