<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            style="@style/Bar1"
            android:paddingLeft="40dp"/>

        <kiolk.github.com.timesheetprogressbar.TimeSheetBar
            app:isLabelUnder="true"
            style="@style/Bar1"
            app:maxBarHeight="40dp"
            android:layout_width="300dp"
            android:id="@+id/time_bar"
            app:barType="overlaid" />

        <ProgressBar
            style="@style/Bar2"
            android:progress="50" />

        <kiolk.github.com.timesheetprogressbar.TimeSheetBar
            style="@style/Bar2"
            android:id="@+id/time_bar_1"
            app:additionalNeedTrackTimeColor="@color/needAdditionalTrackColor"
            app:barType="overlaid"
            app:dayNeedTrackTimeColor="@color/currentUnTrackedColor"
            app:moreCurrentDayTrakedTimeColor="@color/moreCurrentDayTrackedColor"
            app:moreTrackedTimeColor="@color/moreTrackedTime"
            app:trackedTimeColor="@color/trackedColor"
            app:unTrackedTimeColor="@color/unTrackedColor" />

        <ProgressBar
            style="@style/Bar3"
            android:progress="50" />

        <kiolk.github.com.timesheetprogressbar.TimeSheetBar
            android:id="@+id/time_bar_2"
          style="@style/Bar3"
            app:maxBarHeight="10dp"
            app:additionalNeedTrackTimeColor="@color/needAdditionalTrackColor"
            app:barType="overlaid"
            app:dayNeedTrackTimeColor="@color/currentUnTrackedColor"
            app:moreCurrentDayTrakedTimeColor="@color/moreCurrentDayTrackedColor"
            app:moreTrackedTimeColor="@color/moreTrackedTime"
            app:trackedTimeColor="@color/trackedColor"/>

        <ProgressBar
            style="@style/Bar4"
            android:progress="50" />


        <kiolk.github.com.timesheetprogressbar.TimeSheetBar
            android:id="@+id/time_bar_3"
            style="@style/Bar4"
            app:additionalNeedTrackTimeColor="@color/needAdditionalTrackColor"
            app:barTitle="test bar title"
            app:barType="divided"
            app:maxBarHeight="10dp"
            app:dayNeedTrackTimeColor="@color/currentUnTrackedColor"
            app:moreCurrentDayTrakedTimeColor="@color/moreCurrentDayTrackedColor"
            app:moreTrackedTimeColor="@color/moreTrackedTime"
            app:trackedTimeColor="@color/trackedColor"
            app:unTrackedTimeColor="@color/unTrackedColor" />

        <ProgressBar
            style="@style/Bar5"
            android:progress="50" />

        <kiolk.github.com.timesheetprogressbar.TimeSheetBar
            android:id="@+id/time_bar_4"
            style="@style/Bar5" />

        <ProgressBar
            style="@style/Bar3"
            android:progress="50" />
    </LinearLayout>
</ScrollView>